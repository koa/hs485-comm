<?xml version="1.0" encoding="UTF-8"?>
<project>
	<modelVersion>4.0.0</modelVersion>
	<name>HS485-Comm</name>
	<groupId>ch.eleveneye.hs485</groupId>
	<artifactId>comm</artifactId>
	<version>0.5.1-SNAPSHOT</version>
	<description>Kommunikations-Library f√ºr HS485</description>
	<scm>
		<connection>
			scm:hg:https://www.berg-turbenthal.ch/hg/HS485/file/tip/HS485-Comm/
		</connection>
	</scm>
	<build>
		<resources>
			<resource>
				<filtering>true</filtering>
				<directory>src/main/resources</directory>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.0</version>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
				</configuration>
			</plugin>
		</plugins>
		<!-- <extensions>
			<extension>
			<groupId>org.apache.maven.wagon</groupId>
			<artifactId>wagon-scp</artifactId>
			<version>1.0-beta-2</version>
			</extension>
			</extensions>-->
	</build>
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.0</version>
		</dependency>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
			<version>1.2.13</version>
		</dependency>
		<dependency>
			<groupId>org.rxtx</groupId>
			<artifactId>rxtx</artifactId>
			<version>2.1.7</version>
		</dependency>
	</dependencies>
	<distributionManagement>
		<repository>
			<id>internal</id>
			<url>
				dav:http://venus.intern.eleveneye.ch:8081/archiva/repository/internal/
			</url>
		</repository>
		<snapshotRepository>
			<id>snapshots</id>
			<url>
				dav:http://venus.intern.eleveneye.ch:8081/archiva/repository/snapshots/
			</url>
		</snapshotRepository>
	</distributionManagement>
	<repositories>
		<repository>
			<id>internal</id>
			<name>Archiva Managed Internal Repository</name>
			<url>
				http://venus.intern.eleveneye.ch:8081/archiva/repository/internal/
			</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>snapshots</id>
			<name>Archiva Managed Snapshot Repository</name>
			<url>
				http://venus.intern.eleveneye.ch:8081/archiva/repository/snapshots/
			</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>atlassian</id>
			<url>https://maven.atlassian.com/repository/public</url>
			<releases>
				<updatePolicy>daily</updatePolicy>
			</releases>
		</repository>
	</repositories>
</project>
